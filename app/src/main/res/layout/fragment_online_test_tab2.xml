<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wx.apas.OnlineTestTabActivity$PlaceholderFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="72dp">

            <TextView
                android:text="Title"
                android:layout_width="44dp"
                android:layout_height="55dp"
                android:id="@+id/tv_title" />

            <TextView
                android:text="Description"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:id="@+id/tv_question_type" />

            <TextView
                android:text="End Submission Time"
                android:layout_width="84dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                />

            <TextView
                android:text="Number Of Attempts Remaining"
                android:layout_width="78dp"
                android:layout_height="55dp"
                android:id="@+id/tv_required_language" />

            <TextView
                android:text="Start Submission"
                android:layout_width="match_parent"
                android:layout_height="55dp"

                android:id="@+id/tv_difficulty" />

        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2" />

    </LinearLayout>

</RelativeLayout>